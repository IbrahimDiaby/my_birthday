<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:isScrollContainer="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".HomeActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="40dp"
        />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#000"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bienvenue sur l'application de NeoMatriXID"
            android:textSize="30dp"
            android:cursorVisible="true"
            android:gravity="center"
            android:textColorHighlight="@color/MatrixRed"
            android:textColor="@color/MatrixWhite"
            />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/hbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MatrixRed"
        android:textColor="@color/MatrixWhite"
        android:text="Happy Birthday Page"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:onClick="HbdClick"
        />



</LinearLayout>